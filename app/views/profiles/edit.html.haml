= form_for @user, url: '/profile' do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this vpn from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :cell
    = f.text_field :cell
  .field
    = f.label 'Room Number'
    = f.text_field :room_number
  .field
    = f.label 'Single?'
    = f.check_box :single, {}, 'True', 'False'
  .actions
    = f.submit 'Save'
