= form_for @vpn, url: '/vpn' do |f|
  - if @vpn.errors.any?
    #error_explanation
      %h2= "#{pluralize(@vpn.errors.count, "error")} prohibited this vpn from being saved:"
      %ul
        - @vpn.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :password
    = f.text_field :password
  .actions
    = f.submit 'Save'
