<h2>Devices</h2>
<table>
<tr>
	<th width="100" align="left"></th>
	<th width="125" align="left"></th>
	<th width="125" align="left"></th>
</tr>

<% @person.devices.each do |device| %>
	<tr>
		<td><%= device.name %></td>
		<td><%= link_to 'Edit Device', [device.person, device],
				:get => :show %>
		</td>
		<td><%= button_to 'Delete', [device.person, device], 
				:confirm 	=> 'Sure you want to delete device?',
				:method 	=> :delete %>
		</td>
	</tr>
<% end %>
</table>


