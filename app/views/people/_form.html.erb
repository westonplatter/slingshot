<%= semantic_form_for @person do |f| %>
  <%= f.semantic_errors :state %>
  <%= f.inputs do %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :cell, :as => :phone %>
    <%= f.input :married, :as => :radio %>
  <% end %>
  <%= f.action :submit, :label => true %>
<% end %>